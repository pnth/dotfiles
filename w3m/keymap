# ########## history navigation ##########
# keymap L NULL
# keymap H NULL
# keymap L NEXT
# keymap H PREV
# keymap B NULL  # BACK
# keymap :h HELP
# keymap :h SELECT_MENU
#keymap :h HISTORY

# ########## scrolling ##########
keymap C-f NULL  # cusor left
keymap C-b NULL  # cursor forward
keymap C-f NEXT_PAGE
keymap C-b PREV_PAGE
# keymap zz CENTER_V

# ########## cursor ##########
keymap 0 NULL
keymap $ NULL
keymap w NULL
keymap b NULL  # PREV_PAGE
keymap 0 LINE_BEGIN
keymap $ LINE_END
keymap w NEXT_WORD
keymap b PREV_WORD

# ########## cursor history ##########
# (                 Cancel the last cursor movement (UNDO)
# )                 Cancel the last undo (REDO)
# C-o               Edit with external editor
keymap C-i NULL
keymap C-o NULL
keymap C-i REDO
keymap C-o UNDO

# ########## navigation ##########
# keymap f MOVE_LIST_MENU
# keymap F LIST_MENU
# TAB               Move to next link (NEXT_LINK)
# ESC-TAB,^[[Z,C-u  Move to previous link (PREV_LINK)
# C-n,j             Select next buffer
# C-p,k             Select previous buffer
keymap C-n NULL
keymap C-p NULL
keymap C-n NEXT_LINK
keymap C-p PREV_LINK
#
# # reload
# C-r               Incremental search backward (ISEARCH_BACK)
keymap r   NULL
keymap C-r NULL
keymap r RELOAD

#
# # save/load
# ESC-s             Save document source to file (DOWNLOAD)
# S                 Save buffer to file (PRINT)
# E                 Edit current document (EDIT)
# keymap e NULL
keymap : NULL
keymap :e EDIT_SCREEN  #ESC-e
keymap :w SAVE
keymap :W PRINT
keymap o NULL
keymap o GOTO  # o, ESC-o: Option setting panel (OPTIONS)
# keymap :e LOAD


# ########## info ##########
# c                 Peek current URL (PEEK)
# u                 Peek link URL (PEEK_LINK)
# i                 Peek image URL (PEEK_IMG)
keymap y PEEK
# keymap gC-g INFO
# =                 View info of current document (INFO)
# keymap C-g LINE_INFO # the same
keymap gf VIEW

